{
  "name": "at-your-service-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:test": "vite build --config vite.config.test.js",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run build:test && npm run test:build && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "npm run build:test && playwright test",
    "test:e2e:ui": "npm run build:test && playwright test --ui",
    "test:e2e:headed": "npm run build:test && playwright test --headed",
    "test:e2e:debug": "npm run build:test && playwright test --debug",
    "test:build": "vitest run --config vitest.config.js tests/build",
    "playwright:install": "playwright install --with-deps",
    "playwright:codegen": "playwright codegen http://localhost:3000"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^1.0.0",
    "happy-dom": "^12.10.0",
    "serve": "^14.2.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
